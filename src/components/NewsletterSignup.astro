---
// src/components/NewsletterSignup.astro
// Newsletter signup component (Netlify Forms version)
---

<div class="newsletter-container">
    <form name="newsletter" method="POST" netlify class="newsletter-form">
      <input type="hidden" name="form-name" value="newsletter" />
  
      <h3>Subscribe to our newsletter</h3>
      <p>Get the latest updates delivered straight to your inbox!</p>
  
      <div class="form-group">
        <input 
          type="email" 
          name="email" 
          id="email" 
          placeholder="Your email address" 
          required
        />
        <button type="submit" id="submit-btn">Subscribe</button>
      </div>
  
      <div id="form-message"></div>
    </form>
  </div>
  
  <style>
    .newsletter-container {
      background-color: var(--sl-color-bg-offset);
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin: 2rem 0;
    }
  
    .newsletter-form h3 {
      margin-top: 0;
      font-size: 1.2rem;
    }
  
    .form-group {
      display: flex;
      gap: 0.5rem;
      margin: 1rem 0;
    }
  
    input[type="email"] {
      flex: 1;
      padding: 0.5rem;
      border: 1px solid var(--sl-color-gray-5);
      border-radius: 0.25rem;
      background-color: var(--sl-color-white);
      color: var(--sl-color-text);
    }
  
    button {
      background-color: var(--sl-color-accent);
      color: white;
      border: none;
      border-radius: 0.25rem;
      padding: 0.5rem 1rem;
      cursor: pointer;
      font-weight: 500;
      transition: background-color 0.2s;
    }
  
    button:hover {
      background-color: var(--sl-color-accent-high);
    }
  
    #form-message {
      height: 1.5rem;
      font-size: 0.9rem;
    }
  
    .success {
      color: green;
    }
  
    .error {
      color: red;
    }
  
    @media (max-width: 600px) {
      .form-group {
        flex-direction: column;
      }
    }
  </style>
  